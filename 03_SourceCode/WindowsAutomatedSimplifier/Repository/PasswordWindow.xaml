<Window x:Class="WindowsAutomatedSimplifier.Repository.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Closing="PasswordWindow_OnClosing"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        KeyDown="PasswordWindow_OnKeyDown"
        Title="Input Password..." Height="145" Width="200">
    <Grid>
        <PasswordBox x:Name="PasswordBox" Width="120" Height="24" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="25,28,25,0"/>
        <Button x:Name="BtnUse" Content="Use Password" Height="24" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="36,0,36,20" Width="100" Click="BtnUse_Click"/>
    </Grid>
</Window>

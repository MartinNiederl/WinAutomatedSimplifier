    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35*"></ColumnDefinition>
            <ColumnDefinition Width="65*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="24"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Content="NetwerkInterfaces:" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" FontSize="14" />
        <Label Content="InterfaceDetails:" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" FontSize="14"/>

        <ListView x:Name="Interfaces" Grid.Column="0" Grid.Row="1" Margin="10,10,10,0" ItemsSource="{Binding List, RelativeSource={RelativeSource AncestorType=Window}}">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Height" Value="30" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        <DataGrid x:Name="NetInfo" ItemsSource="{Binding SelectedInterface, RelativeSource={RelativeSource AncestorType=Window}}" AutoGenerateColumns="True" Grid.Column="1" Grid.Row="1" />

        <Button x:Name="RefreshIP" Content="Refresh IP Address" Grid.Column="0" Grid.Row="3" Margin="2" Click="RefreshIP_OnClick"/>
        <Label Content="CurrentIP:" Grid.Column="1" Grid.Row="3" Margin="20,0,0,0" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <Label x:Name="CurrIP" Content="" Grid.Column="1" Grid.Row="3" Margin="100,0,0,0" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Left"/>

    </Grid>
</Window>








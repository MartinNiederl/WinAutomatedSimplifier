<Window x:Class="WindowsAutomatedSimplifier.NetworkSettings.Network"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsAutomatedSimplifier.NetworkSettings"
        mc:Ignorable="d"
        MinWidth="900" MaxWidth="1000"
        MinHeight="500" MaxHeight="1000"
        Title="Network" Height="500" Width="900">
